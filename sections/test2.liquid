<section class="container py-5">
  <div class="row">
    <div class="col-lg-6 col-md-5 mx-auto">
      <h1>{{ section.settings.title }}</h1>
      {{ section.settings.desciption }}
      <a style="border: 1px solid black; padding:12px 24px;"
        href="{{ section.settings.Button_link }}">{{ section.settings.button_label }}</a>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "hero",
    "class": "hero section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Example heading",
        "label": "Heading Title"
      }, {
        "type": "richtext",
        "id": "desciption",
        "default": "<p>Example description</p>",
        "label": "Heading description"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Button check",
        "label": "Button label"
      }, {
        "type": "url",
        "id": "Button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      
    ],
    "presets": [
      {
        "category": "hero",
        "name": "Hero"
      }
    ]
  }
{% endschema %}